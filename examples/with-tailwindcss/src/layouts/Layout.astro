---
import NavigationLinks from "../components/NavigationLinks.astro";
import NavigationSocialBar from "../components/NavigationSocialBar.astro";
const { content } = Astro.props;
---

<html lang="en" >
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>TRVL Website</title>
	</head>
	<body class="font-mono pt-30 bg-light dark:bg-gray-800">
		<main class="md:container md:mx-auto w-full min-h-screen">
			<header class="flex items-center rounded-full justify-between shadow-lg dark:border-gray-600 border px-4 py-4 font-medium bg-light dark:bg-gray-700" style="height: 4rem; ">
				<nav class="flex items-center justify-center w-full gap-x-16 text-2xl text-dark dark:text-light">
					<NavigationLinks />
					
				</nav>
				<nav class="flex items-center justify-center gap-x-5">
					<NavigationSocialBar />
				</nav>
			</header>
			<article>
				<slot />
			</article>
		</main>
		<script src="../js/app.js"></script>
	</body>
</html>
