---
import NavigationLinks from "../components/NavigationLinks.astro";
import NavigationSocialBar from "../components/NavigationSocialBar.astro";
const { content } = Astro.props;
---

<html lang="en" >
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>TRVL Website</title>
		<style>
			header {
				background-color: rgba(242, 245, 248, 0.938);
				padding: 20px;
				height: 4rem;
			}

			.dark header {
				background-color: rgba(2, 10, 22, 0.938);
				padding: 20px;
				height: 4rem;
			}
		</style>
	</head>
	<body class="font-mono pt-30 bg-light dark:bg-gray-800" style="min-height: 100vh;">
		<header class="flex items-center sticky top-0 justify-between shadow-lg border-gray-700 dark:border-gray-800 border px-4 py-4 font-medium">
			<nav class="flex items-center justify-center gap-x-16 w-full text-2xl text-dark dark:text-light">
				<NavigationLinks />
			</nav>
			<nav class="flex items-center justify-center gap-x-5">
				<NavigationSocialBar />
			</nav>
		</header>
		<main class="md:container md:mx-auto w-full min-h-screen">
			
			<article>
				<slot />
			</article>
		</main>
		<script src="../js/app.js"></script>
	</body>
</html>
