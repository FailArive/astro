---
const { title, url, currentpath } = Astro.props;
---

<a href={"/" + url} class="relative group ">
    {title}
    {
        currentpath === url ? (
            <span
            class="inline-block w-full h-[1px] bg-light absolute left-0 -bottom-1  group-hover:w-full navbartextfarbe transition-[width] ease duration-300">&nbsp;
            </span>
        ) : (
            <span 
            class="inline-block w-0 h-[1px] navbartextfarbe absolute left-0 -bottom-1 group-hover:w-full navbartextfarbe transition-[width] ease duration-300">&nbsp;
            </span>
        )
    }
  
</a>