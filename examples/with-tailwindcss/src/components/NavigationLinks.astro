---
import NavigationLink from "./NavigationLink.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.split("/");
---

<NavigationLink title="Home" url="" currentpath={currentPath[1]} />
<!--NavigationLink title="Info" url="Info" currentpath={currentPath[1]} /-->
<NavigationLink title="Shop" url="Shop" currentpath={currentPath[1]} />
<NavigationLink title="Contact" url="Contact" currentpath={currentPath[1]} />